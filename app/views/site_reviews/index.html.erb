<h1>Listing site_reviews</h1>

<table>
  <tr>
    <th>Approve</th>
    <th>Comments</th>
  </tr>

<% for site_review in @site_reviews %>
  <tr>
    <td><%=h site_review.approve %></td>
    <td><%=h site_review.comments %></td>
    <td><%= link_to 'Show', site_review %></td>
    <td><%= link_to 'Edit', edit_site_review_path(site_review) %></td>
    <td><%= link_to 'Destroy', site_review, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New site_review', new_site_review_path %>
